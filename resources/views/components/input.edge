<div>
  <label for="{{ id }}" class="block text-sm font-medium text-gray-700">{{ label }}</label>
  <input
    type="{{ type || 'text' }}"
    name="{{ name }}"
    id="{{ id }}"
    value="{{ value || '' }}"
    class="w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-primary-300"
    required
  />
  @if(error)
    <p class="text-red-500 text-sm mt-1">
      {{ error }}
    </p>
  @endif
</div>
